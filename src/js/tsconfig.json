{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["DOM", "ES2018"],
        "sourceMap": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["webworkers", "node_modules"]
}
